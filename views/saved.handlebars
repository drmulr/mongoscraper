<main role="main">
    <div class="jumbotron">
        <h1 class="display-3">Saved Articles</h1>
        <p class="lead">Gizmodo Edition</p>
        {{!-- <p><button id="getArticles" class="btn btn-lg btn-success">Get Articles!</button></p> --}}
    </div>

    <div class="row">
        <div id="articles" class="col-lg-12">
            {{#each articles}}
                <div class="list-group">
                    <a href="{{link}}" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">{{ title }}</h5>
                            {{!-- <small>3 days ago</small> --}}
                            <p class="mb-1">{{ link }}</small>
                            <button type="button" class="btn btn-primary">Save</button>
                        </div>
                        {{!-- <p class="mb-1">{{ link }}</small> --}}
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</main>